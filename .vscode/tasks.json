{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd build && make VulpesRender",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake_debug",
            "type": "shell",
            "command": "cd build && cmake -DCMAKE_BUILD_TYPE=DEBUG -DBUILD_EXAMPLE_SCENES=ON ../"
        },
        {
            "label": "cmake_rel_with_deb_info",
            "type": "shell",
            "command": "cd build && cmake -DCMAKE_BUILD_TYPE=RELWITHDEBINFO ../"
        },
        {
            "label": "cmake_release",
            "type": "shell",
            "command": "cd build && cmake -DCMAKE_BUILD_TYPE=RELEASE ../"
        },
        {
            "label": "run-clang-tidy",
            "type": "shell",
            "command": "python run-clang-tidy.py -p build -export-fixes fixes.yaml"
        }
    ]
}